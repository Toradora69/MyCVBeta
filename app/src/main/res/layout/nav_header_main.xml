<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="60dp"
        android:layout_height="65dp"
        android:layout_margin="10dp"
        android:background="@drawable/profil"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/icon"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="Michael Ta"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/idphonenumer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+45 30746684"
            android:textColor="#fff"
            android:textSize="13sp"/>
        <TextView
            android:id="@+id/idAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lucernevej 13, Horsens"
            android:textColor="#fff"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/idMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Michaelhaota@hotmail.com"
            android:textColor="#fff"
            android:textSize="13sp"/>
    </LinearLayout>
</RelativeLayout>
